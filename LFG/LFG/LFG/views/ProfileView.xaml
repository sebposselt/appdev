    <ScrollView>
            <RelativeLayout>
<!--                        TODO, binding not working... can't fingre out why.. --> 
                <Label x:Name="usernameL" Text="{Binding PlayerProfile.Username}" FontAttributes="Bold" FontSize="Large" TextColor="White"  
